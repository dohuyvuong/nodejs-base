{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",

    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
